{
  "version": "1.0",
  "permalink": "assets/festival-custom.css",
  "exclude": [
    "title_tagline",
    "static_front_page",
    "nav",
    "background_image",
    "colors",
    "header_image"
  ],
  "sections": {
    "festival_colors": {
      "title": "l10n.colors",
      "priority": 40
    },
    "styled_button_colors": {
      "title": "l10n.styled_button_colors",
      "priority": 45
    },
    "festival_images": {
      "title": "l10n.background_images",
      "priority": 50
    }
  },
  "settings": [
    {
      "key": "header_banner_bg_color",
      "label": "l10n.header_banner_bg_color",
      "section": "festival_colors",
      "control": "background-color",
      "selector": "#header .section-header-banner"
    },
    {
      "key": "content_bg_color",
      "label": "l10n.content_bg_color",
      "section": "festival_colors",
      "control": "background-color",
      "selector": "body #main"
    },
    {
      "key": "footer_bg_color",
      "label": "l10n.footer_bg_color",
      "section": "festival_colors",
      "control": "background-color",
      "selector": "footer.footer"
    },
    {
      "key": "header_banner_bg_image",
      "label": "l10n.header_banner_bg_image",
      "section": "festival_images",
      "control": "background-image",
      "selector": "#header .section-header-banner"
    },
    {
      "key": "sticky_bar_logo",
      "label": "l10n.sticky_bar_logo",
      "section": "festival_images",
      "control": "background-image",
      "selector": "#header nav.navbar-top .navbar-brand a"
    },
    {
      "key": "button_background_color",
      "label": "l10n.button_background_color",
      "section": "styled_button_colors",
      "control": "background-color",
      "selector": ".btn-custom"
    },
    {
      "key": "button_font_color",
      "label": "l10n.button_font_color",
      "section": "styled_button_colors",
      "control": "color",
      "selector": ".btn-custom"
    },
    {
      "key": "button_border_color",
      "label": "l10n.button_border_color",
      "section": "styled_button_colors",
      "control": "border-color",
      "selector": ".btn-custom"
    },
    {
      "key": "button_background_color_hover",
      "label": "l10n.button_background_color_hover",
      "section": "styled_button_colors",
      "control": "background-color",
      "selector": ".btn-custom:hover, .btn-custom:active"
    },
    {
      "key": "button_font_color_hover",
      "label": "l10n.button_font_color_hover",
      "section": "styled_button_colors",
      "control": "color",
      "selector": ".btn-custom:hover, .btn-custom:active"
    },
    {
      "key": "button_border_color_hover",
      "label": "l10n.button_border_color_hover",
      "section": "styled_button_colors",
      "control": "border-color",
      "selector": ".btn-custom:hover, .btn-custom:active"
    }
  ]
}