{
  "version": "1.0",
  "permalink": "assets/festival-custom.css",
  "exclude": [
    "title_tagline",
    "static_front_page",
    "nav",
    "background_image",
    "colors",
    "header_image"
  ],
  "sections": {
    "festival_colors": {
      "title": "l10n.colors",
      "priority": 40
    },
    "styled_button_colors": {
      "title": "l10n.styled_button_colors",
      "priority": 45
    },
    "menufication": {
      "title": "l10n.menufication",
      "priority": 50
    },
    "festival_bg_images": {
      "title": "l10n.background_images",
      "priority": 55
    },
    "festival_images": {
      "title": "l10n.images",
      "priority": 60
    }
  },
  "settings": [
    {
      "key": "header_banner_bg_color",
      "label": "l10n.header_banner_bg_color",
      "section": "festival_colors",
      "control": "background-color",
      "selector": "#header .section-header-banner"
    },
    {
      "key": "content_bg_color",
      "label": "l10n.content_bg_color",
      "section": "festival_colors",
      "control": "background-color",
      "selector": "body #main"
    },
    {
      "key": "footer_bg_color",
      "label": "l10n.footer_bg_color",
      "section": "festival_colors",
      "control": "background-color",
      "selector": "footer.footer"
    },
    {
      "key": "header_banner_bg_image",
      "label": "l10n.header_banner_bg_image",
      "section": "festival_bg_images",
      "control": "background-image",
      "selector": "#header .section-header-banner"
    },
    {
      "key": "sticky_bar_logo",
      "label": "l10n.sticky_bar_logo",
      "section": "festival_bg_images",
      "control": "background-image",
      "selector": "#header nav.navbar-top .navbar-brand a, #menufication-top, #menufication-non-css3-top"
    },
    {
      "key": "404_page",
      "label": "l10n.404_page",
      "section": "festival_images",
      "control": "image",
      "selector": "#404_image_page"
    },
    {
      "key": "menufication_bg",
      "label": "l10n.background",
      "section": "menufication",
      "control": "background-color",
      "selector": "#menufication-top, #menufication-non-css3-top, #menufication-scroll-container, #menufication_block_social ul li a:hover, #menufication_block_social ul li:hover"
    },
    {
      "key": "menufication_borders",
      "label": "l10n.menu_borders",
      "section": "menufication",
      "control": "border-color",
      "selector": "#menufication-nav ul, #menufication-nav ul li, #menufication_block_social ul li, #menufication-nav ul > li > ul li, #menufication-non-css3-nav li, #menufication-nav ul > li.open > ul"
    },
    {
      "key": "menufication_colors",
      "label": "l10n.font_colors",
      "section": "menufication",
      "control": "color",
      "selector": "#menufication-nav ul li a, #menufication_block_social ul li a, #menufication_block_social ul li a:hover"
    },
    {
      "key": "menufication_colors_hover",
      "label": "l10n.font_colors_hover",
      "section": "menufication",
      "control": "color",
      "selector": "#menufication-nav ul li a:hover, #menufication_block_social ul li:hover a"
    },
    {
      "key": "menufication_toggle_button_color",
      "label": "l10n.menufication_toggle_button_color",
      "section": "menufication",
      "control": "border-color",
      "selector": "#menufication-top #menufication-btn:before, #menufication-non-css3-top #menufication-non-css3-btn:before"
    },
    {
      "key": "menufication_toggle_button_hover_color",
      "label": "l10n.menufication_toggle_button_hover_color",
      "section": "menufication",
      "control": "border-color",
      "selector": "#menufication-top #menufication-btn:hover:before, #menufication-non-css3-top #menufication-non-css3-btn:hover:before"
    },
    {
      "key": "menufication_btn_color",
      "label": "l10n.button_color",
      "section": "menufication",
      "control": "color",
      "selector": "#menufication_block_tickets_url a"
    },
    {
      "key": "menufication_btn_color_hover",
      "label": "l10n.button_color_hover",
      "section": "menufication",
      "control": "color",
      "selector": "#menufication_block_tickets_url a:hover"
    },
    {
      "key": "menufication_btn_bg",
      "label": "l10n.button_background",
      "section": "menufication",
      "control": "background-color",
      "selector": "#menufication_block_tickets_url a"
    },
    {
      "key": "menufication_btn_bg_hover",
      "label": "l10n.button_background_hover",
      "section": "menufication",
      "control": "background-color",
      "selector": "#menufication_block_tickets_url a:hover"
    },
    {
      "key": "menufication_btn_border",
      "label": "l10n.bbutton_border_color",
      "section": "menufication",
      "control": "border-color",
      "selector": "#menufication_block_tickets_url a"
    },
    {
      "key": "menufication_logo",
      "label": "l10n.logo",
      "section": "menufication",
      "control": "image",
      "selector": "#menufication_logo"
    },
    {
      "key": "button_background_color",
      "label": "l10n.button_background_color",
      "section": "styled_button_colors",
      "control": "background-color",
      "selector": ".btn-custom"
    },
    {
      "key": "button_font_color",
      "label": "l10n.button_font_color",
      "section": "styled_button_colors",
      "control": "color",
      "selector": ".btn-custom"
    },
    {
      "key": "button_border_color",
      "label": "l10n.button_border_color",
      "section": "styled_button_colors",
      "control": "border-color",
      "selector": ".btn-custom"
    },
    {
      "key": "button_background_color_hover",
      "label": "l10n.button_background_color_hover",
      "section": "styled_button_colors",
      "control": "background-color",
      "selector": ".btn-custom:hover, .btn-custom:active"
    },
    {
      "key": "button_font_color_hover",
      "label": "l10n.button_font_color_hover",
      "section": "styled_button_colors",
      "control": "color",
      "selector": ".btn-custom:hover, .btn-custom:active"
    },
    {
      "key": "button_border_color_hover",
      "label": "l10n.button_border_color_hover",
      "section": "styled_button_colors",
      "control": "border-color",
      "selector": ".btn-custom:hover, .btn-custom:active"
    }
  ]
}